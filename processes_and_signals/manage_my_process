#!/usr/bin/env bash
# Combined manage_my_process script with management commands

PIDFILE="/var/run/my_process.pid"
PROCESS_NAME="manage_my_process"
ANSWER_FILE_NAME="/tmp/my_process"

manage_my_process() {
    while true
    do
        echo "I am alive!" >> "$ANSWER_FILE_NAME"
        sleep 2
    done
}

start() {
    if [ -f "$PIDFILE" ]; then
        echo "$PROCESS_NAME is already running"
        exit 1
    fi
    manage_my_process &> /dev/null &
    echo $! > "$PIDFILE"
    echo "$PROCESS_NAME started"
}

stop() {
    if [ ! -f "$PIDFILE" ]; then
        echo "$PROCESS_NAME is not running"
        exit 1
    fi
    kill "$(cat "$PIDFILE")" &> /dev/null
    rm "$PIDFILE"
    echo "$PROCESS_NAME stopped"
}

restart() {
    stop > /dev/null 2>&1
    start > /dev/null 2>&1
    echo "$PROCESS_NAME restarted"
}

usage() {
    echo "Usage: manage_my_process {start|stop|restart}" >&2
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        usage
        exit 1
        ;;
esac
